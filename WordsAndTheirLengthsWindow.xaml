<Window x:Class="TextAnalyzerApp.WordsAndTheirLengthsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextAnalyzerApp"
        mc:Ignorable="d"
        Title="WordsAndTheirLengthsWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="dataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,0,130"/>
        <Button x:Name="button" Content="Close" HorizontalAlignment="Left" Margin="315,354,0,0" VerticalAlignment="Top" Click="button_Click"/>

    </Grid>
</Window>
